<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/style.css" />
    <title>Home</title>
  </head>
  <body>
    <style>
      .table-container {
        padding: 15px 20px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      tr:hover {
        background-color: coral;
      }
    </style>
    <div class="topnav">
      <a class="active" href="/">Home</a>
      <a href="/create">Create</a>
    </div>
    <div class="table-container">
      <div style="padding: 15px; text-align: center; font-size: 20px">
        List user
      </div>
      <table>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>

        <% listUsers.forEach(function(users, index) { %>
        <tr>
          <td><%=users.id %></td>
          <td><%=users.email %></td>
          <td><%=users.name %></td>
          <td><%=users.city %></td>
          <td>
            <a href="/edit/<%=users.id %>"">Edit</a>
           <form action="/delete-user/<%=users.id %>" method="post">
             <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </table>
    </div>

  </body>
</html>
